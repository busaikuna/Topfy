<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/navbar') %>
  
  <section class="hero">
    <div class="hero-content">
      <h1 class="hero-title">TOPFY</h1>
      <p class="hero-subtitle">Your Personal Music Recommender</p>
      <div class="hero-actions">
        <% if (currentUser) { %>
          <a href="/user/dashboard" class="btn-primary">Go to Dashboard</a>
        <% } else { %>
          <a href="/user/login" class="btn-primary">Get Started</a>
        <% } %>
        <a href="/music/explore" class="btn-secondary">Explore Music</a>
      </div>
    </div>
  </section>

  <section class="popular-section">
    <div class="container">
      <h2 class="section-title">Most Popular</h2>
      <div class="music-grid">
        <% popularMusics.forEach(music => { %>
          <div class="music-card">
            <div class="music-cover" style="background-image: url('<%= music.coverUrl || '/placeholder.svg?height=200&width=200' %>')"></div>
            <div class="music-info">
              <h3 class="music-title"><%= music.title %></h3>
              <p class="music-artist"><%= music.artist %></p>
              <div class="music-meta">
                <span class="music-genre"><%= music.genre %></span>
                <span class="music-popularity"><%= music.popularity %> plays</span>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </section>

  <%- include('partials/footer') %>
  <script src="/js/main.js"></script>
</body>
</html>
