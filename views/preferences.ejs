<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - TOPFY</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/navbar') %>
  
  <div class="container">
    <h1 class="page-title">Your Preferences</h1>
    
    <div class="preferences-container">
      <div class="current-preferences">
        <h2 class="section-title">Selected Genres</h2>
        <div class="genre-list" id="selectedGenres">
          <% if (user.getPreferences().length > 0) { %>
            <% user.getPreferences().forEach(genre => { %>
              <div class="genre-badge selected">
                <%= genre %>
                <button onclick="removePreference('<%= genre %>')" class="remove-btn">Ã—</button>
              </div>
            <% }) %>
          <% } else { %>
            <p class="empty-state">No genres selected yet</p>
          <% } %>
        </div>
      </div>

      <div class="available-genres">
        <h2 class="section-title">Available Genres</h2>
        <div class="genre-list">
          <% allGenres.forEach(genre => { %>
            <% const isSelected = user.getPreferences().includes(genre.toLowerCase()); %>
            <button 
              class="genre-badge <%= isSelected ? 'selected' : '' %>" 
              onclick="<%= isSelected ? `removePreference('${genre}')` : `addPreference('${genre}')` %>"
            >
              <%= genre %>
            </button>
          <% }) %>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/main.js"></script>
  <script src="/js/preferences.js"></script>
</body>
</html>
